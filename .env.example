# Notion Authentication (Get from browser cookies when logged into Notion)
# Find token_v2: Open DevTools -> Application -> Cookies -> notion.so -> token_v2
NOTION_TOKEN_V2=your_token_v2_here

# Space ID (optional - leave empty to export entire workspace)
# Find in URL when viewing workspace settings or any page
NOTION_SPACE_ID=your_space_id_here

# Page ID to export (optional - leave empty to export entire space)
# Get from page URL: notion.so/Page-Name-{THIS_IS_THE_PAGE_ID}
NOTION_PAGE_ID=

# GitHub Repository
# Use SSH format: git@github.com:username/repo-name.git
GITHUB_REPO_URL=git@github.com:yourusername/notion-backup.git

# Git Configuration
GIT_USER_NAME=Notion Backup Bot
GIT_USER_EMAIL=backup@yourdomain.com

# Backup Schedule (in hours)
BACKUP_INTERVAL_HOURS=24

# Export Options
EXPORT_TYPE=markdown  # Options: markdown, html
INCLUDE_FILES=true    # Include images and attachments
RECURSIVE=true        # Export nested pages (always recommended)

# Timezone for exports (optional)
TIMEZONE=America/New_York